{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "requiredStatusChecks": null,
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "addLabels": ["AUTO-MERGE"],
      "ignoreTests": true
    }
  ]
}